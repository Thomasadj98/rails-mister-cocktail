<div class="showcontainer">

  <div class="showcontainer-left">

    <h1><%= @cocktail.name %> </h1>

    <div class="ingredientslist">
      <ul>
        <h4>Ingredients:</h4>
        <% @cocktail.doses.each do |dose| %>
        <li> <%= dose.description %> <%= dose.ingredient.name %> - <%= link_to 'delete dose', dose_path(dose), method: :delete %> </li>
        <% end %>
      </ul>
    </div>

    <div class="button-container">
      <%= link_to "add dose", new_cocktail_dose_path(@cocktail.id), class: "btn btn-primary" %>

      <%= link_to 'go back', cocktails_path, class: "btn btn-primary" %>
    </div>

  </div>

  <div class="showcontainer-right">

  </div>

</div>
